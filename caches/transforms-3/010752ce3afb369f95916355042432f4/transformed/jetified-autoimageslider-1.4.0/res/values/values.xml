<?xml version="1.0" encoding="utf-8"?>
<resources>
    <string name="app_name">AutoImageSlider</string>
    <declare-styleable name="PageIndicatorView">
        <attr name="piv_orientation">
            <enum name="horizontal" value="0"/>
            <enum name="vertical" value="1"/>
        </attr>

        <attr format="reference" name="piv_viewPager"/>
        <attr format="integer" name="piv_select"/>

        <attr format="integer" name="piv_count"/>
        <attr format="boolean" name="piv_dynamicCount"/>

        <attr format="dimension" name="piv_radius"/>
        <attr format="dimension" name="piv_padding"/>
        <attr format="dimension" name="piv_strokeWidth"/>
        <attr format="float" name="piv_scaleFactor"/>
        <attr format="boolean" name="piv_autoVisibility"/>

        <attr format="color" name="piv_unselectedColor"/>
        <attr format="color" name="piv_selectedColor"/>

        <attr format="boolean" name="piv_interactiveAnimation"/>
        <attr format="integer" name="piv_animationDuration"/>
        <attr name="piv_animationType">
            <enum name="none" value="0"/>
            <enum name="color" value="1"/>
            <enum name="scale" value="2"/>
            <enum name="worm" value="3"/>
            <enum name="slide" value="4"/>
            <enum name="fill" value="5"/>
            <enum name="thinWorm" value="6"/>
            <enum name="drop" value="7"/>
            <enum name="swap" value="8"/>
            <enum name="scale_down" value="9"/>
        </attr>
        <attr name="piv_rtl_mode">
            <enum name="on" value="0"/>
            <enum name="off" value="1"/>
            <enum name="auto" value="2"/>
        </attr>
    </declare-styleable>
    <declare-styleable name="SliderView">

        <attr name="sliderIndicatorOrientation">
            <enum name="horizontal" value="0"/>
            <enum name="vertical" value="1"/>
        </attr>

        <attr format="boolean" name="sliderIndicatorEnabled"/>
        <attr format="dimension" name="sliderIndicatorRadius"/>
        <attr format="dimension" name="sliderIndicatorPadding"/>
        <attr format="dimension" name="sliderIndicatorMargin"/>
        <attr format="dimension" name="sliderIndicatorMarginLeft"/>
        <attr format="dimension" name="sliderIndicatorMarginRight"/>
        <attr format="dimension" name="sliderIndicatorMarginTop"/>
        <attr format="dimension" name="sliderIndicatorMarginBottom"/>

        <attr name="sliderIndicatorGravity">
            <flag name="bottom" value="80"/>
            <flag name="center" value="17"/>
            <flag name="center_horizontal" value="1"/>
            <flag name="center_vertical" value="16"/>
            <flag name="clip_horizontal" value="8"/>
            <flag name="clip_vertical" value="128"/>
            <flag name="end" value="8388613"/>
            <flag name="fill" value="119"/>
            <flag name="fill_horizontal" value="7"/>
            <flag name="fill_vertical" value="112"/>
            <flag name="left" value="3"/>
            <flag name="right" value="5"/>
            <flag name="start" value="8388611"/>
            <flag name="top" value="48"/>
        </attr>

        <attr format="color" name="sliderIndicatorUnselectedColor"/>
        <attr format="color" name="sliderIndicatorSelectedColor"/>
        <attr format="integer" name="sliderIndicatorAnimationDuration"/>
        <attr format="integer" name="sliderAnimationDuration"/>

        <attr name="sliderIndicatorRtlMode">
            <enum name="on" value="0"/>
            <enum name="off" value="1"/>
            <enum name="auto" value="2"/>
        </attr>

        <attr format="integer" name="sliderScrollTimeInSec"/>
        <attr format="boolean" name="sliderAutoCycleEnabled"/>
        <attr format="boolean" name="sliderStartAutoCycle"/>

        <attr name="sliderAutoCycleDirection">
            <enum name="right" value="0"/>
            <enum name="left" value="1"/>
            <enum name="back_and_forth" value="2"/>
        </attr>

    </declare-styleable>
</resources>