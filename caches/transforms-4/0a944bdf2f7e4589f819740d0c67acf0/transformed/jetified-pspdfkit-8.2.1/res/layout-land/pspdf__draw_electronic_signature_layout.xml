<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:app="http://schemas.android.com/apk/res-auto"
       xmlns:tools="http://schemas.android.com/tools"
       tools:layout_height="match_parent"
       tools:layout_width="match_parent"
       tools:parentTag="com.pspdfkit.internal.ui.dialog.signatures.DrawElectronicSignatureLayout">

    <FrameLayout
        android:id="@+id/pspdf__signature_canvas_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/pspdf__signature_fab_accept_edited_signature"
        android:layout_alignParentTop="true">

        <com.pspdfkit.internal.ui.dialog.signatures.DrawElectronicSignatureCanvasView
            android:id="@+id/pspdf__signature_canvas_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/pspdf__color_white"/>
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/pspdf__signature_controller_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/pspdf__electronic_signature_controls_view_background"
        android:layout_alignTop="@+id/pspdf__signature_fab_accept_edited_signature"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <com.pspdfkit.internal.ui.dialog.signatures.ElectronicSignatureControllerView
            android:id="@+id/pspdf__signature_controller_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"/>

        <com.pspdfkit.internal.ui.dialog.signatures.SaveSignatureChip
            android:id="@+id/pspdf__electronic_signature_save_chip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/pspdf__electronic_signature_save_signature"
            android:clickable="true"
            android:focusable="true"
            tools:layout_width="110dp"
            />
    </RelativeLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/pspdf__signature_fab_accept_edited_signature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:clickable="true"
        android:focusable="true"
        android:visibility="invisible"
        app:elevation="4dp"
        app:fabSize="normal"
        app:useCompatPadding="true"/>
</merge>
