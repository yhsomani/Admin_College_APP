<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/pspdf__inspector_item_height"
    android:addStatesFromChildren="true"
    android:background="?selectableItemBackground"
    android:clickable="true"
    android:paddingStart="@dimen/pspdf__inspector_padding"
    android:paddingEnd="@dimen/pspdf__inspector_padding"
    android:focusable="true">

    <CheckedTextView
        android:id="@+id/pspdf__check_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:checkMark="@drawable/pspdf__check_mark"
        android:gravity="center_vertical"
        android:textAppearance="?android:attr/textAppearanceListItemSmall"
        android:textColor="@color/pspdf__color_gray_dark"
        tools:checked="true"
        tools:text="Text"/>
</FrameLayout>
