<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/pspdf__document_info_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/pspdf__document_info_item_title_and_value_spacing"
            android:textColor="@color/pspdf__document_info_item_title_text_color"
            android:textSize="@dimen/pspdf__document_info_item_title_text_size"
            tools:text="Document title" />

        <EditText
            android:id="@+id/pspdf__document_info_item_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-4dp"
            android:layout_marginTop="-12dp"
            android:enabled="false"
            android:textColor="@color/pspdf__document_info_item_value_text_color"
            android:textColorHint="@color/pspdf__document_info_item_value_hint_text_color"
            android:textSize="@dimen/pspdf__document_info_item_value_text_size"
            android:hint="@string/pspdf__page_binding_unknown"
            android:importantForAutofill="no"
            android:inputType="text"
            tools:text="Guides-v4" />
    </LinearLayout>

    <com.pspdfkit.internal.ui.documentinfo.PageBindingView
        android:id="@+id/pspdf__document_info_left_binding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="?selectableItemBackground"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingTop="8dp"
        android:paddingRight="16dp"
        android:paddingBottom="8dp"/>

    <com.pspdfkit.internal.ui.documentinfo.PageBindingView
        android:id="@+id/pspdf__document_info_right_binding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="?selectableItemBackground"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingTop="8dp"
        android:paddingRight="16dp"
        android:paddingBottom="8dp"/>
</LinearLayout>
