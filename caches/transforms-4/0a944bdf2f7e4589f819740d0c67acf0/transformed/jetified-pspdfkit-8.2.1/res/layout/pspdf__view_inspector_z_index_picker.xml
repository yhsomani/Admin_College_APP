<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="?selectableItemBackground"
              android:gravity="center_vertical"
              android:orientation="horizontal"
              android:paddingStart="@dimen/pspdf__inspector_padding"
              android:paddingTop="@dimen/pspdf__inspector_vertical_padding"
              android:paddingEnd="@dimen/pspdf__inspector_padding"
              android:paddingBottom="@dimen/pspdf__inspector_vertical_padding">

    <com.pspdfkit.ui.LocalizedTextView
        android:id="@+id/pspdf__label"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:minWidth="100dp"
        android:singleLine="true"
        android:textSize="@dimen/pspdf__inspector_text_size"
        tools:text="Order" />

    <ImageButton
        android:id="@+id/pspdf__move_to_front"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_margin="4dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/pspdf__z_index_front"
        android:src="@drawable/pspdf__ic_zindex_top"
        app:tint="@color/pspdf__color"/>

    <ImageButton
        android:id="@+id/pspdf__move_forward"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_margin="4dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/pspdf__z_index_forward"
        android:src="@drawable/pspdf__ic_zindex_up"
        app:tint="@color/pspdf__color"/>

    <ImageButton
        android:id="@+id/pspdf__move_backward"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_margin="4dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/pspdf__z_index_backward"
        android:src="@drawable/pspdf__ic_zindex_down"
        app:tint="@color/pspdf__color"/>

    <ImageButton
        android:id="@+id/pspdf__move_to_back"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/pspdf__z_index_back"
        android:src="@drawable/pspdf__ic_zindex_bottom"
        app:tint="@color/pspdf__color"/>

</LinearLayout>