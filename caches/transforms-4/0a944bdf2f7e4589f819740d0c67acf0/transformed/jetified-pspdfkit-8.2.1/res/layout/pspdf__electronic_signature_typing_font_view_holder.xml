<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pspdf__electronic_signature_font_view_holder_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"

    android:paddingStart="18dp"
    android:paddingEnd="18dp"
    android:background="?android:attr/selectableItemBackground"
    tools:showIn="@layout/pspdf__typing_electronic_signature_layout">

    <androidx.appcompat.widget.AppCompatRadioButton
        android:id="@+id/pspdf__electronic_signature_font_view_holder_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:focusable="false"
        android:clickable="false"
        />
    <TextView
        android:id="@+id/pspdf__electronic_signature_font_view_holder_text"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="12dp"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        app:autoSizeTextType="uniform"
        app:autoSizeMaxTextSize="30sp"
        app:autoSizeMinTextSize="12sp"
        app:autoSizeStepGranularity="2sp"
        android:maxLines="1"
        android:maxLength="50"
        android:textColor="@drawable/pspdf__electronic_signature_font_text_color_selector"
        tools:text="Font" />
</LinearLayout>
