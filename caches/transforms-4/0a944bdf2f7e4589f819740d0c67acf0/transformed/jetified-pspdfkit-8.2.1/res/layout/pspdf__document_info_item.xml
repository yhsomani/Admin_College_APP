<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <TextView
        android:id="@+id/pspdf__document_info_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/pspdf__document_info_item_title_and_value_spacing"
        android:textColor="@color/pspdf__document_info_item_title_text_color"
        android:textSize="@dimen/pspdf__document_info_item_title_text_size"
        tools:text="Document title"/>

    <EditText
        android:id="@+id/pspdf__document_info_item_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-12dp"
        android:textColor="@color/pspdf__document_info_item_value_text_color"
        android:textColorHint="@color/pspdf__document_info_item_value_hint_text_color"
        android:textSize="@dimen/pspdf__document_info_item_value_text_size"
        android:layout_marginStart="-4dp"
        android:hint="@string/pspdf__document_info_not_set"
        android:importantForAutofill="no"
        android:inputType="text"
        tools:text="Guides-v4" />

</LinearLayout>
