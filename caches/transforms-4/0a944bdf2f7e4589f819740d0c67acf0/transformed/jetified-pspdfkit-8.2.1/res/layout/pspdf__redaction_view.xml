<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:parentTag="android.widget.FrameLayout">

    <LinearLayout
        android:id="@+id/pspdf__redaction_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:orientation="vertical"
        android:visibility="invisible"
        tools:visibility="visible"
        android:translationX="82dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/pspdf__redaction_actions_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:visibility="invisible"
            app:cardUseCompatPadding="true"
            tools:visibility="visible">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.pspdfkit.ui.LocalizedButton
                    android:id="@+id/pspdf__apply_redactions_button"
                    style="@style/Base.Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start|center_vertical"
                    android:text="@string/pspdf__redaction_apply_redactions" />

                <com.pspdfkit.ui.LocalizedButton
                    android:id="@+id/pspdf__clear_redactions_button"
                    style="@style/Base.Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start|center_vertical"
                    android:text="@string/pspdf__redaction_clear_redactions" />

                <com.pspdfkit.ui.LocalizedButton
                    android:id="@+id/pspdf__redaction_preview_button"
                    style="@style/Base.Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start|center_vertical"
                    android:text="@string/pspdf__redaction_enable_preview" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/pspdf__open_redact_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:foreground="?selectableItemBackground"
            app:cardBackgroundColor="@color/pspdf__color_red_light"
            app:cardUseCompatPadding="true">

            <com.pspdfkit.ui.LocalizedTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:drawableStart="@drawable/pspdf__ic_redaction"
                android:drawablePadding="8dp"
                app:pspdf__drawableTint="@color/pspdf__color_white"
                android:gravity="center_vertical|start"
                android:minHeight="48dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="@string/pspdf__annotation_type_redaction"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"
                android:textColor="@color/pspdf__color_white" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>


</merge>
